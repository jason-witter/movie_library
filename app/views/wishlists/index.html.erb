<h1><%= @user.name %>'s Wishlist</h1>
<br>
<% unless  @wish_list_movies.count == 0 %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-offset-3">
      <%= link_to '<button type="button" class="btn btn-info">Search for Movies to Add</button>'.html_safe, search_path %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 col-md-offset-3 well">
      <table id="wishlist_table" class="table table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>DVD Release Date</th>
            <th>Days Until Release</th>
          </tr>
        </thead>

        <%= render 'table_body' %>
      </table>
    </div>
  </div>
</div>
<% else %>



<div class="container-fluid">
  <div class="row">
    <div class="col-md-offset-3 col-md-6 well">
      <h3 class="center">You don't have any movies on your wishlist!<br> Check out <a target="_blank"href="http://www.rottentomatoes.com/dvd/new-releases">Rotten Tomatoes</a> for new dvd releases to get ideas or <br> <%= link_to 'search Rotten Tomatoes for a movie', search_path %>.</h3>
    </div>
  </div>
</div>

<% end %>