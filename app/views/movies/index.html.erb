<h1 class="text-primary">Here's the movie page</h1>

<div class="row">
  <div class="col-md-8">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Downloaded?</th>
          <th>Watched?</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @movies.each do |movie| %>
          <tr>
            <td><%= movie.title %></td>
            <td><%= check_box_tag 'downloaded', '1', movie.downloaded, :disabled => true %></td>
            <td><%= check_box_tag 'watched', '1', movie.watched, :disabled => true %></td>
            <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
            <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

