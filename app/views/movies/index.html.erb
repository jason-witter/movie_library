<h1 class="text-primary">Jason's Movies</h1>
<br>
<%= link_to '<button type="button" class="btn">Add New Movie</button>'.html_safe, new_movie_path %>

<div class="row">
  <div class="col-md-8">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Downloaded?</th>
          <th>Watched?</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>

      <tbody>
        <% @movies.each do |movie| %>
          <tr>
            <td><%= movie.title %></td>
            <td><% if movie.downloaded %>
              <span class="glyphicon glyphicon-ok"></span>
              <% else %>
              <span class="glyphicon glyphicon-remove"></span>
              <% end %>
            </td>
            <td><% if movie.watched %>
              <span class="glyphicon glyphicon-ok"></span>
              <% else %>
              <span class="glyphicon glyphicon-remove"></span>
              <% end %>
            </td>
            <td><%= link_to '<span class="glyphicon glyphicon-pencil"></span'.html_safe, edit_movie_path(movie) %></td>
            <td><%= link_to '<span class="glyphicon glyphicon-trash"></span'.html_safe, movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
