<h1 class="text-primary">Here's the movie page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Downloaded?</th>
      <th>Watched?</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.downloaded? %></td>
        <td><%= movie.watched? %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

